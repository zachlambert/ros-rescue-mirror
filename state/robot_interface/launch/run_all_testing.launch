<launch>
    <include file="$(find robot_interface)/launch/state_publisher.launch"/>

    <node name="robot_interface" pkg="robot_interface" type="robot_interface"/>

    <node name="robot_placeholder" pkg="robot_interface" type="robot_placeholder.py"/>

    <rosparam file="$(find robot_interface)/config/controllers.yaml" command="load"/>

    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="/arm_controller /joint_state_controller"/>

    <include file="$(find robot_config)/launch/move_group.launch"/>
</launch>
