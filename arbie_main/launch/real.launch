<launch>
    <include file="$(find arbie_main)/launch/common.launch"/>

    <!-- Incorporate the following 4 nodes into arbie_hardware -->
    <node
        name="odrive_flipper"
        pkg="odrive_ros"
        type="main.py"
        output="screen" respawn="true">
            <param name="serial_no" value="336631563536" type="str"/>
    </node>
    <node
        name="odrive_drive"
        pkg="odrive_ros"
        type="main.py"
        output="screen"
        respawn="true">
            <param name="serial_no" value="209137933548" type="str"/>
    </node>
    <node
        name="wrist_driver"
        pkg="wrist_driver"
        type="main.py"
        respawn="true"
    />
    <node
        name="topic_mapper"
        pkg="topic_mapper"
        type="main.py"
        output="screen" respawn="true"
    />

    <!-- Rosserial for pcb -->
    <node
        name="power_board"
        pkg="rosserial_python"
        type="serial_node.py"
        respawn="true">
        <param
            name="~port"
            value="/dev/serial/by-id/usb-Teensyduino_USB_Serial_6491540-if00"
            type="str"
        />
    </node>
</launch>
