<launch>
    <!-- ===== COMMON BETWEEN REAL AND SIMULATION ===== -->
    <include file="$(find arbie_main)/launch/common.launch"/>

    <!-- ===== SIMULATION ONLY ===== -->

    <param
        name="robot_description_sdf"
        command="cat $(find arbie_description)/model/arbie.sdf"
    />

    <!-- Assumes gazebo is started -->

    <!-- Spawn the model -->
    <!-- Haven't gotten it to work with sdf model yet -->
    <node
        name="spawn_model"
        pkg="gazebo_ros"
        type="spawn_model"
        args="-param robot_description -urdf -x 0 -y 0 -z 0 -model arbie -b"
    />
</launch>
