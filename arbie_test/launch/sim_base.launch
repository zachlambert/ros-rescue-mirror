<launch>
    <param
        name="robot_description"
        command="xacro $(find arbie_description)/model/arbie_base_sim.urdf.xacro"
    />
    <node
        name="spawn_model"
        pkg="gazebo_ros"
        type="spawn_model"
        args="-param robot_description -urdf -x 0 -y 0 -z 0 -model simple_base -b -gazebo_namespace gzserver"
    />

    <include file="$(find arbie_bringup)/launch/control.launch">
        <arg name="sim" value="true"/>
        <arg name="arm" value="false"/>
        <arg name="flippers" value="false"/>
    </include>

    <include file="$(find arbie_bringup)/launch/teleop.launch">
        <arg name="webgui" value="false"/>
        <arg name="xbox" value="false"/>
        <arg name="keyboard_base" value="true"/>
    </include>
</launch>
