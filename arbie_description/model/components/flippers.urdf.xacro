<?xml version="1.0"?>
<to_include xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:macro name="flippers" params="pos_interface vel_interface">

<!-- FLIPPER LINKS -->

<link name="flipper_front_right_link">
